<div class="container mt-3">
    <a href="/admin/add-product" class="btn btn-success" style="float: right;">Add product</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Category</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <th scope="row">1</th>
                <td><img src="/product-images/{{this._id}}.jpg" alt="" style="width: 70px;"></td>
                <td>{{this.Name}}</td>
                <td>{{this.Category}}</td>
                <td>{{this.Description}}</td>
                <td>{{this.Price}}</td>
                <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
                <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure?')" >Delete</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>